@model IList<MessageViewModel>
@{
    ViewData["Title"] = "Receive";
    Layout = "/Views/Shared/_MessagesLayout.cshtml";
}


<div class="row">
    <div class="col-md-12">
        @if (Model?.Count == 0)
        {
            <h3>No messages</h3>
        }
        else
        {
            <table class="table table-hover">
                <thead class="table-dark align-items-center">
                    <tr>
                        <th>Reciver Name</th>
                        <th>Time Creation</th>
                        <th>Threme</th>
                        <th>Receive</th>
                    </tr>
                </thead>
                <tbody id="messages">
                    @for (int i = 0; i < Model?.Count; i++)
                    {
                        <tr>
                            <td>
                                @Model[i].UserFullName
                            </td>
                            <td>@Model[i].CreateDate</td>
                            <td>
                                <button type="button" class="btn btn-link" data-bs-container="body"
                                data-bs-toggle="popover" data-bs-placement="bottom"
                                data-bs-content="@Model[i].Text">
                                    @Model[i].Title
                                </button>
                            </td>
                            <td>
                                <a asp-controller="Home" asp-action="Create"
                                asp-route-userSenderId="@Model[i].UserSenderId">
                                    <i class="fa-solid fa-rotate-right"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
